{
  "version": 2,
  "buildCommand": "npm install && cd frontend && npm install && npm run build",
  "outputDirectory": "frontend/build",
  "installCommand": "npm install && cd frontend && npm install",
  "framework": "create-react-app",
  "rewrites": [
    {
      "source": "/api/bills/:id/status",
      "destination": "/api/bills-status?id=:id"
    },
    {
      "source": "/api/bills/:id/comprovante",
      "destination": "/api/bills-comprovante?id=:id"
    },
    {
      "source": "/api/bills/:id/boleto",
      "destination": "/api/bills-boleto?id=:id"
    },
    {
      "source": "/api/bills/:id",
      "destination": "/api/bills-update?id=:id",
      "has": [
        {
          "type": "method",
          "value": "PATCH"
        }
      ]
    },
    {
      "source": "/api/bills/:id",
      "destination": "/api/bills-delete?id=:id",
      "has": [
        {
          "type": "method",
          "value": "DELETE"
        }
      ]
    },
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
